{% extends '::base.html.twig' %}
{% block body %}
    <div class="site-login">
        <h1>Login</h1>

        <p>Please fill out the following fields to login:</p>

        <div class="row">
            <div class="col-lg-5">
                <form action="{{ path('user_login') }}" method ="post" {{ form_enctype(form) }}>
                    {{ form_widget(form) }}

                    <input type="submit" value="login" class="btn btn-primary"/>
                </form>

            </div>
        </div>
    </div>
{% endblock %}